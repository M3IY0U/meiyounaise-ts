{
  "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noParameterAssign": {
          "level": "off"
        }
      },
      "suspicious": {
        "noExplicitAny": {
          "level": "off"
        }
      }
    }
  },
  "formatter": {
    "indentSize": 2,
    "indentStyle": "space",
    "lineWidth": 80
  }
}